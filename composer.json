{
    "name": "comodojo/database",
    "description": "Multi-database library with query builder",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "comodojo",
        "database",
        "query builder",
        "mysql",
        "mysqli",
        "pdo_oci",
        "pdo_mysql",
        "pdo_sqlite",
        "pgsql",
        "pdo_dblib",
        "ms sql server"
        "ibm_db2",
        "db2"
    ],
    "homepage": "https://comodojo.org",
     "support": {
        "issues": "https://github.com/comodojo/database/issues"
    },
    "authors": [
        {
            "name": "Marco Giovinazzi",
            "email": "marco.giovinazzi@comodojo.org",
            "homepage": "http://jme.altervista.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "Comodojo\\Database\\QueryBuilder\\": "src/QueryBuilder",
            "Comodojo\\Database\\": "src/Comodojo/Database"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "comodojo/exceptions": "@stable"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0|^5.0",
        "scrutinizer/ocular": "^1.0"
    },
    "suggest": {
        "ext-mysqli": "Support for MySQL 4.1 and above databases",
        "ext-pdo_oci": "Support for Oracle databases through the OCI library",
        "ext-pdo_mysql": "Support for MySQL 3.x, 4.x and 5.x databases (pdo)",
        "ext-pdo_sqlite": "Support for SQLite 3 databases",
        "ext-pgsql": "Support for PostgreSQL databases",
        "ext-pdo_dblib": "Support for Microsoft SQL Server and Sybase databases",
        "ext-ibm_db2": "Support for IBM DB2 Universal Database, IBM Cloudscape, and Apache Derby databases"
    }
}
